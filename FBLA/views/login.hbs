  <p style="text-align: center; padding-top: 100px; font-size: 20px">{{message}}</p>
  <div class="login-container">
  <div class="container">
    <div class="login-newuser">
      <form id="loginform" class="square"action="/login" method="post">
        <legend> Log in </legend>

        <div class="form-group">
        <label for="user-username">Username</label>
        <input type="text" name="username" class="form-control" id="userusername" autofocus="autofocus" placeholder="Username">
        </div>

        <div class="form-group">
            <label for="user-password">Password</label>
            <input type="password" name="password" class="form-control" id="user-password" placeholder="Password">
        </div>

        <div style="padding-bottom: 10px"class="text-right">

          <button type="submit" class="btn btn-primary">Log in</button>
        </div>


          Don't have an account?
           <a href="/users/new">Sign up</a>

      </form>
    </div>
  </div>
